<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingTop="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/cuts"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cuts_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.red.forteza.ui.view.CutView
            android:id="@+id/fendente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cut_image="@drawable/fendente" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_25" />

        <com.red.forteza.ui.view.CutView
            android:id="@+id/sottano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cut_image="@drawable/sottano" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_25" />

        <com.red.forteza.ui.view.CutView
            android:id="@+id/mezzano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cut_image="@drawable/mezzano" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_25" />

        <com.red.forteza.ui.view.CutView
            android:id="@+id/punta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cut_image="@drawable/punta" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_25" />

        <com.red.forteza.ui.view.CutView
            android:id="@+id/falso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>