<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/cuts"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cuts_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.red.forteza.ui.view.CutView
                android:id="@+id/fendente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cut_image="@drawable/fendente" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_25" />

            <com.red.forteza.ui.view.CutView
                android:id="@+id/sottano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cut_image="@drawable/sottano" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_25" />

            <com.red.forteza.ui.view.CutView
                android:id="@+id/mezzano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cut_image="@drawable/mezzano" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_25" />

            <com.red.forteza.ui.view.CutView
                android:id="@+id/punta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cut_image="@drawable/punta" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_25" />

            <com.red.forteza.ui.view.CutView
                android:id="@+id/falso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>