<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_cut"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cut_name"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textAllCaps="true"
        android:paddingLeft="16dp"
        android:layout_toStartOf="@+id/cut_image"
        android:textSize="16sp"
        tools:text="TITLE"
        android:layout_alignParentEnd="true" />

    <com.red.forteza.ui.view.FTextView
        android:id="@+id/cut_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cut_name"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_toStartOf="@+id/cut_image"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        tools:text="translation" />

    <com.red.forteza.ui.view.FTextView
        android:id="@+id/cut_meaning"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cut_translation"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:layout_toStartOf="@+id/cut_image"
        tools:text="meaning" />

    <ImageView
        android:id="@+id/cut_image"
        android:layout_width="87dp"
        android:layout_height="150dp"
        android:layout_below="@+id/cut_name"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/fendente" />
</RelativeLayout>