<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_cut"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.red.forteza.ui.view.FTextView
        android:id="@+id/cut_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@+id/layout_image"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        tools:text="TITLE" />

    <com.red.forteza.ui.view.FTextView
        android:id="@+id/cut_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cut_name"
        android:layout_toStartOf="@+id/layout_image"
        android:background="@color/colorPrimary"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:textColor="@color/white"
        tools:text="translation" />

    <com.red.forteza.ui.view.FTextView
        android:id="@+id/cut_meaning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cut_translation"
        android:layout_toStartOf="@+id/layout_image"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        tools:text="meaning" />

    <RelativeLayout
        android:id="@+id/layout_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cut_name">

        <ImageView
            android:id="@+id/cut_image"
            android:layout_width="87dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/fendente" />

        <ImageView
            android:id="@+id/image_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_zoom_in" />
    </RelativeLayout>
</RelativeLayout>